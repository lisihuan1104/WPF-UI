<UserControl x:Class="Panuon.UI.Silver.PUTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Panuon.UI.Silver"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400"
             VerticalAlignment="Top"
             HorizontalAlignment="Left"
             x:Name="this">

    <Grid>
        <TextBlock x:Name="TxtContent"
                   TextDecorations="{Binding TextDecorations,ElementName=this}"
                   TextWrapping="{Binding TextWrapping,ElementName=this}"
                   TextAlignment="{Binding TextAlignment,ElementName=this}"
                   VerticalAlignment="{Binding VerticalContentAlignment,ElementName=this}"
                   HorizontalAlignment="{Binding HorizontalContentAlignment,ElementName=this}"></TextBlock>
    </Grid>
</UserControl>
